{
  "name": "Go",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "-u",
    "vscode",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "-v",
    "${env:HOME}/.ssh:/home/vscode/.ssh:ro"
  ],
  "extensions": ["golang.go"],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "go.autocompleteUnimportedPackages": true
  }
}
